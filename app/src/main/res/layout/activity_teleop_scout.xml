            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:text="Was lifted by other Robot" />
        <CheckBox
            android:id="@+id/chk_Lifted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60sp"
            android:text="Lifted  Robot(s)" />
</LinearLayout>

    // ==============================================================================
    <LinearLayout
        android:id="@+id/lin_Penalties"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_below="@+id/lin_Lift"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lbl_Number_Penalties"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Number of Penalties"
            android:textColor="@color/red" />

        <TextView
            android:id="@+id/txt_Number_Penalties"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:text="0"
            android:textColor="@color/yellow"
            android:textSize="16dp" />
        <Button
            android:id="@+id/button_Number_PenaltiesPlus"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:text="+" />
        <Button
            android:id="@+id/button_Number_PenaltiesUndo"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginStart="15dp"
            android:text="-" />

        <TextView
            android:id="@+id/lbl_Number_Dropped"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="Dropped Panels"
            android:textColor="@color/orange" />

        <TextView
            android:id="@+id/txt_Num_Dropped"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:text="0"
            android:textColor="@color/yellow"
            android:textSize="16dp" />
        <Button
            android:id="@+id/btn_DropPlus"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:text="+" />
        <Button
            android:id="@+id/btn_DropMinus"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginStart="15dp"
            android:text="-" />
    </LinearLayout>

    // @@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@
    <Button
        android:id="@+id/button_GoToFinalActivity"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="Final" />
    // @@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@


</RelativeLayout>
